-table_style = "border: 1px solid #ccc; width: 90%; border-right:none; border-bottom:none; margin-left: 40px;"
-td_style = "border: 1px solid #ccc; border-top: none; border-left:none; padding: 5px;"
-th_style = td_style + ""
-th_left_style = td_style + "text-align: right;";
-h1_style = "font-size: 30px; color: #ccc; text-align: center;"
- our_company = @invoice.our_company


%div{:style => "clear: both; margin-top: 20px; overflow: auto"}
  %div{:style => "float:left; margin: 0px 0;"}
    = "#{our_company.name}, #{our_company.address} #{our_company.zip_code} #{our_company.city}, #{our_company.country}"
  %div{:style => "float:left; margin: 0px 0; clear:left;"}
    = "Registration number: #{our_company.registration_number}, VAT number: #{our_company.vat_number}, VAT not applicable"
  %div{:style => "float:left; margin: 0px 0; clear:left;"}
    %b="Invoice number: #{@invoice.invoice_number}"
  %div{:style => "float:right; margin: 0px 0;"}
    %b= l @invoice.created_at.to_date, format: :default
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 10px;"}
    = @invoice.project.partner.name
    - if @invoice.project.partner.vat
      %br
      = "VAT number: #{@invoice.project.partner.vat}"
    %br
    = @invoice.project.partner.address
    %br
    = "#{@invoice.project.partner.zip_code} #{@invoice.project.partner.city}"
    %br
    = @invoice.project.partner.country
    %br
    %br
    %b="Attention #{@invoice.project.partner.attention_to}"
    %br
    %br
    %hr{:style => "width: 650px; margin-left: 10px"}
    ="Summary:"
  %table{:style => table_style, :cellspacing => 0}
    - @invoice.invoice_items.each do |invoice_item|
      %tr
        %td{:style => th_style}
          = "- #{invoice_item.description}"
        %td{:style => th_style}= @invoice.currency
        %td{:style => th_style}= invoice_item.price
    %tr
      %td{:style => th_style}
        = "Total due"
      %td{:style => th_style}= @invoice.currency
      %td{:style => th_style}= @invoice.price
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    = "VAT TAX."
    = "Not Applicable"
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    = "PAYMENT DUE 8 DAYS"

  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    = "For deposit to the account of #{our_company.name} with:"
    %br
    = our_company.bank
    %br
    = our_company.trr
    %br
    = "Reference number: #{our_company.reference_number}"
    %br
    = "Swift BIC code: #{our_company.swift_bic_code}"
    %br
    = our_company.country
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    - if @invoice.project.partner.footer_text
      = @invoice.project.partner.footer_text
    - else
      = "VAT is not charged according to the art. 94 of Slovenia VAT law"
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    %b= "If you have any questions concerning this invoice, please contact:"
    %br
    = our_company.contact_name
    %br
    = our_company.contact_phone
    %br
    = our_company.contact_email
  %div{:style => "float:left; margin: 0px 0; clear:left; margin-top: 20px;"}
    = "No signature or stamp required"
